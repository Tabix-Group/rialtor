# Backend Environment Variables

# OpenAI Configuration (Required for AI Chat Assistant)
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"

# Web Search Configuration (Optional - mejora las respuestas con información en tiempo real)
# Obtén tu API key gratis en: https://tavily.com
TAVILY_API_KEY="tvly-..."

# Database
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"


# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL="http://localhost:3000"
# Or use a comma-separated list of allowed origins (useful for production)
# FRONTEND_URLS="https://remax-fe-production.up.railway.app,https://www.rialtor.app,https://rialtor.app"

# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100        # requests per window per IP
